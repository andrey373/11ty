{% extends  "base.njk" %}

{% block content %}
<section class="homePage">
    <div>
        {{ content | safe }}
    </div>
</section>

<section class="content">

    <div class="container">
        <div class="myworks__samples">
        
        {% for work in works %}
            <div class="block_card">
            <h3 class="fw-bolder">{{ work.subheading }}</h3>
            <div class="row d-flex align-items-center">
                <div class="col-md-6 col_img">
                    <img src="{{ work.image }}" alt="" />
                </div>
                <div class="col-md-6">
                    <h4>{{ work.heading }}</h4>
                    <p>{{ work.heading }}</p>
                </div>
            </div>
            </div>
        {% endfor %}

        </div>
    </div>

</section>


{% endblock content %}